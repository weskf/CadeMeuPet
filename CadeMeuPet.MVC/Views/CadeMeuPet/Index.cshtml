@model List<CadeMeuPet.MVC.ViewModel.AnimalViewModel>
@{
    ViewBag.Title = "Cadê Meu Pet?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-tittle-page">Busca de Pets</h1>
    <hr />
    <div class="card">
        <div class="card-body">
            <span class="fa fa-question-circle" title="Ajuda" id="btn-help"></span>
            <div class="row" id="div-help" hidden="hidden">
                <div class="col-md-12">
                    <div class="alert alert-warning" role="alert">
                        <span class="col-form-label-sm">Para pesquisar por Pets perdidos, selecione a opção "Pet Perdido". 
                        <br/>Para pesquisar por Pets encontrados, selecione a opção "Pet Encontrado"</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="btn-group btn-group-sm btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-secondary active">
                            <input type="radio" name="options" id="id-petEncontrado" autocomplete="off" checked> Pet Encontrado
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="options" id="id-PetPerdido" autocomplete="off"> Pet Perdido
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" placeholder="Pesquisar por características do Pet" id="inp-pesquisar" name="inp-pesquisar" class="form-control" />
                        <span class="input-group-append">
                            <button class="fa fa-search" style="background-color:darkgreen;border:none"></button>
                        </span>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    @Html.DropDownList("Estado", null, "Selecione", htmlAttributes: new { @id = "Estado", @required = "required", @class = "custom-select selectpicker", data_show_subtext = "true", data_live_search = "true" })
                </div>
                <div class="form-group col-md-3">
                    <select id="Cidade" class="custom-select">
                        <option selected="selected" value="">Cidade</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <input type="text" id="bairro" name="bairro" class="form-control" placeholder="Bairro" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    @Html.DropDownList("Especie", null, "Especie", htmlAttributes: new { @required = "required", @class = "custom-select" })
                </div>
                <div class="form-group col-md-3">
                    <select id="Raca" class="custom-select">
                        <option selected="selected" value="Raça">Raça</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    @Html.DropDownList("Cor", null, "Cor", htmlAttributes: new { @required = "required", @class = "custom-select" })
                </div>
                <div class="form-group col-md-3">
                    @Html.DropDownList("Porte", null, "Porte", htmlAttributes: new { @required = "required", @class = "custom-select" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <button type="submit" id="btn-filter" class="btn btn-outline-success fa fa-search" onclick="Filtro();">
                        <span class="col-form-label-sm">Pesquisar</span>
                    </button>
                    <button type="button" value="Limpar Filtro" id="btn-cleanFilter" class="btn btn-outline-secondary fa fa-broom">
                        <span class="col-form-label-sm">Limpar Filtro</span>
                    </button>
                    <button type="button" value="Cadastrar Meu Pet Perdido" id="btn-cadastroPetPerdido" class="btn btn-outline-primary fa fa-plus">
                        <span class="col-form-label-sm">Cadastrar meu Pet perdido</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />

<div class="alert alert-danger" role="alert" hidden="hidden" id="dv-error">
    Houve um erro ao realizar a busca.
</div>

<div id="GridCadeMeuPet">
    @{ Html.RenderPartial("_GridCadeMeuPet", Model);}
</div>

<script src="~/Scripts/app/CadeMeuPet/Index.js"></script>
